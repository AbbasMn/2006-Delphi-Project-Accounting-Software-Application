procedure TFrm_pardakht_bedehi.suiButton6Click(Sender: TObject);
var st:pchar;
    bedeh,talab,mojodi:real;
begin
bedeh:=0;
talab:=0;
if trim(Edit9.Text)='' then
  Edit9.Text:='0';
  if (Edit6.Text='')or (StrToFloat(Edit9.Text)=0)or(Lname.Caption='')or(e_dagige.Text='')or(e_sanie.Text='')or(e_saeat.Text='') then
  begin
    MessageBox(Handle,'‘Œ’ °  «—ÌŒ Å—œ«Œ  Ê „»·€ Å—œ«Œ Ì  ”«⁄  Å—œ«Œ  »«Ìœ Ê«—œ ‘Ê.œ','Œÿ« !',MB_OK or MB_ICONEXCLAMATION or MB_RTLREADING or MB_RIGHT);
    Exit;
  end
  else
 begin
  if (DBLookupComboBox3.Text='') then
   begin
     MessageBox(Handle,'’‰œÊﬁ »—«Ì Œ—ÊÃ „»·€ ‰ﬁœ —« «‰ Œ«» ‰„«ÌÌœ','Œÿ«! ',MB_OK or MB_ICONEXCLAMATION or MB_RTLREADING or MB_RIGHT );
     Exit;
   end;

   mojodi:=Frm_gozaresh_az_sandog.mojodi_kol(DBLookupComboBox3.Text);

    if mojodi<StrToFloat(Edit9.Text) then
    begin
     MessageBox(Handle,pchar('„»·€ ‰ﬁœ Ê«—œ ‘œÂ «“ „ÊÃÊœÌ ›⁄·Ì ’‰œÊﬁ «‰ Œ«»Ì << '+FloatToStr(mojodi)+' >> »Ì‘ — „Ì »«‘œ'),'Œÿ«! ',MB_OK or MB_ICONEXCLAMATION or MB_RTLREADING or MB_RIGHT );
     Exit;
    end;

    if Frm_shakhs_jadid.check_exsist_shakhs(Lname.Caption) then
      begin//1
      if max_bedehi(bedeh,talab) then
      begin
        st:=pchar('Å—œ«Œ  »œÂÌ »Â << '+Lname.Caption+' >> —«  «ÌÌœ „Ì‰„«ÌÌœø');
        if   MessageBox(Handle,st,' ÊÃÂ !',MB_YESNO or MB_ICONQUESTION or MB_RIGHT or MB_RTLREADING )=id_yes then
        begin
          l_review.Caption:=DataM_final.ADOQ_bedeh_be_foroshnsecode_shakhs.AsString;
          updatebedehi(bedeh,talab);

          show;
          Edit9.Text:='';
          DataM_final.ADOQ_bedeh_be_foroshnse.Locate('code_shakhs',l_review.Caption,[loPartialKey]);
        end
        else
          MessageBox(Handle,'Å—œ«Œ  »œÂÌ À»  ‰‘œ',' ÊÃÂ !',MB_OK or MB_ICONEXCLAMATION or MB_RIGHT or MB_RTLREADING );
      end;
      end
      else
      begin
        st:=pchar(' ‘Œ’ »« „‘Œ’«   <<  '+Lname.Caption+' >> ÊÃÊœ ‰œ«—œ');
        MessageBox(Handle,st,' ÊÃÂ !',MB_OK or MB_ICONEXCLAMATION or MB_RIGHT or MB_RTLREADING );
     end;
  end;


end;

